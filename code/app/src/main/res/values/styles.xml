<resources>
    <!-- Base application theme. -->
    <style name="AppThemeDark" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="titleTextColor">@color/colorAccent</item>
        <item name="backgroundColor">@color/darkBackground</item>
        <item name="colorPrimary">@color/darkBarBackground</item>
        <item name="colorButtonNormal">@color/darkButton</item>
        <item name="colorControlNormal">@color/colorAccent</item>
        <item name="colorSurface">@color/colorAccent</item>
    </style>

    <style name="AppThemeLight" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="titleTextColor">@color/colorAccent</item>
        <item name="backgroundColor">@color/lightBackground</item>
        <item name="colorPrimary">@color/lightBarBackground</item>
        <item name="colorButtonNormal">@color/lightButton</item>
        <item name="colorControlNormal">@color/colorBlack</item>
        <item name="colorSurface">@color/colorBlack</item>
    </style>


</resources>